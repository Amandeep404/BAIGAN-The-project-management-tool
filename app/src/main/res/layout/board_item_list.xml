<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivBoardImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_person_grey_24"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/tvBoardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Board Name"
                android:textSize="18sp"
                android:textColor="@color/discord_purple"
                android:inputType="textCapSentences"
                />
            <TextView
                android:id="@+id/tvBoardCreatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Created By"
                android:textSize="12sp"
                android:textColor="@color/light_grey"
                android:layout_marginTop="6dp"

                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        />

</LinearLayout>